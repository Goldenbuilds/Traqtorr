import pandas as pd

# Load Kaggle data
df = pd.read_csv("website_traffic.csv")

# Dynamic session estimate from dataset
avg_sessions_per_month = df["Previous Visits"].mean() * 10  # Scale previous visits—e.g., 3 × 10 = 30 sessions/month
df["traffic_monthly"] = df["Page Views"] * avg_sessions_per_month

# Save with key metrics
traffic_df = df[["traffic_monthly", "Bounce Rate", "Conversion Rate"]]
traffic_df.to_csv("site_traffic.csv", index=False)
print("Traffic processed to site_traffic.csv—dynamically calculated!")